<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.champs21.schoolapp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layout_project"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_subject_proect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dip"
                        android:layout_marginTop="2dip"
                        android:gravity="center"
                        android:text="Bangla"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <com.champs21.schoolapp.viewhelpers.ExpandableTextView
                        android:id="@+id/tv_description_project"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_marginBottom="2dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Football is a simple game."
                        android:textColor="@color/black"
                        android:textSize="8sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/gray_2" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_grade_project"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="A+"
                    android:textColor="@color/maroon"
                    android:textSize="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/gray_2" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="Your Mark"
                        android:textColor="@color/black"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_marks_project"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="78"
                        android:textColor="@color/black"
                        android:textSize="9sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/gray_2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="Highest Mark"
                        android:textColor="@color/black"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_highest_project"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="85"
                        android:textColor="@color/maroon"
                        android:textSize="9sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/gray_2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="Total Mark"
                        android:textColor="@color/black"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_total_project"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="100"
                        android:textColor="@color/gray_1"
                        android:textSize="9sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/gray_2" />

            <TextView
                android:id="@+id/tv_percent_project"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="80%"
                android:textColor="@color/gray_1"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_ct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_date_ct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dip"
                        android:gravity="center"
                        android:text="Date"
                        android:textColor="@color/gray_1"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/image_subject_ct"
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:cropToPadding="true"
                        android:padding="5dip"
                         />

                    <TextView
                        android:id="@+id/tv_subject_ct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dip"
                        android:gravity="center"
                        android:text="Bangla"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/gray_2" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_name_ct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:gravity="center"
                    android:text="Class test 15"
                    android:textColor="@color/gray_1"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_grade_ct"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="A+"
                    android:textColor="@color/maroon"
                    android:textSize="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/gray_2" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="Your Mark"
                        android:textColor="@color/black"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_marks_ct"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="78"
                        android:textColor="@color/black"
                        android:textSize="9sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/gray_2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="Highest Mark"
                        android:textColor="@color/black"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_highest_ct"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="85"
                        android:textColor="@color/maroon"
                        android:textSize="9sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/gray_2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="Total Mark"
                        android:textColor="@color/black"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_total_ct"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="100"
                        android:textColor="@color/gray_1"
                        android:textSize="9sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/gray_2" />

            <TextView
                android:id="@+id/tv_percent_ct"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="80%"
                android:textColor="@color/gray_1"
                android:textSize="30sp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/gray_2" />

    <LinearLayout
        android:id="@+id/layout_dynamic_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.champs21.schoolapp.viewhelpers.CustomButton
            android:id="@+id/btn_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/general_btn"
            android:clickable="true"
            android:gravity="center"
            custom:iconImage="@drawable/report_project_normal"
            custom:iconText="Project" />

        <LinearLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/gray_2" />

        <com.champs21.schoolapp.viewhelpers.CustomButton
            android:id="@+id/btn_all_ct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/general_btn"
            android:clickable="true"
            android:gravity="center"
            custom:iconImage="@drawable/classtest_all_normal"
            custom:iconText="All Class Test" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_redline"
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:background="@drawable/red_line"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_gap"
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>