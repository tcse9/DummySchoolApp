<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_name_and_batch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matin Rashid khan, Batch iD"
            android:textColor="@color/gray_5"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/txtLeaveSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matin Rashid khan, Batch iD"
            android:textColor="@color/gray_5"
            android:layout_marginTop="5dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_apply_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply Date:02/05/2014"
            android:textColor="@color/gray_1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_start_date_and_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration: 03/05/2014 to 04/05/2014"
            android:textColor="@color/gray_1"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tv_leave_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray_2"
            android:ems="5"
            android:padding="10dp"
            android:text="approved" />
    </LinearLayout>

</LinearLayout>