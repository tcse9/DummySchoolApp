<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/popup_header_color" >

            <TextView
                android:id="@+id/popup_tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="GOOD READ"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/popup_btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/close_selector" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/popup_iv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/candle_popup_icon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/txtScoreShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:text="0/0" />

        <TextView
            android:id="@+id/popup_tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="here is some description text there will be a bunch of text here."
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_red_back"
                android:text="Save Score"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
            
            
            <Button
                android:id="@+id/btnRetry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                 android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_red_back"
                android:text="Retry"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
            
            
            <Button
                android:id="@+id/btnResultSummery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                 android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_red_back"
                android:text="Summery"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
            

        </LinearLayout>
    </LinearLayout>

</LinearLayout>