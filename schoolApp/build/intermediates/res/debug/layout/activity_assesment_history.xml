<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg" >

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textColor="@color/maroon"
        android:textStyle="bold"
        android:background="@color/white"
        android:gravity="center"
        android:layout_margin="10dip"
        android:visibility="gone"
        android:text="You haven't saved any score yet!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/white" >
        
        <ListView 
            android:id="@+id/listViewScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/gray_2"
            android:cacheColorHint="#00000000"
            android:smoothScrollbar="true"
            android:dividerHeight="4dp" >
            
        </ListView>
        
    </LinearLayout>

</RelativeLayout><!-- From: file:/E:/ovi/SchoolApp/SchoolApp/schoolApp/src/main/res/layout/activity_assesment_history.xml -->