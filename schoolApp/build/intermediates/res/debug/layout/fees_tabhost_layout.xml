            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/fees_tap" />

        <TextView
            android:id="@+id/txt_category_name"
